# Required: Any OpenAI-compatible API provider
SOULSEED_PROVIDER=deepseek
SOULSEED_API_KEY=your_api_key
SOULSEED_BASE_URL=https://api.deepseek.com/v1
SOULSEED_MODEL=deepseek-chat
# Optional candidate fallback chain (same provider): comma-separated
# SOULSEED_MODEL_CANDIDATES=deepseek-reasoner,deepseek-chat

# Anthropic native (optional example)
# SOULSEED_PROVIDER=anthropic
# SOULSEED_BASE_URL=https://api.anthropic.com/v1
# SOULSEED_MODEL=claude-3-5-sonnet-latest
# SOULSEED_ANTHROPIC_MAX_TOKENS=2048

# Optional: Embedding model (falls back to local hash-based embeddings if unavailable)
# SOULSEED_EMBEDDING_MODEL=text-embedding-3-small
# SOULSEED_EMBEDDING_DIM=1024

# UX defaults: keep response latency low unless explicitly enabled
# SOULSEED_HUMAN_PACED=0
# SOULSEED_THINKING_PREVIEW=0
# SOULSEED_THINKING_PREVIEW_MODEL_FALLBACK=0
# SOULSEED_MODEL_CONFIG_WARNINGS=0

# Legacy env vars (still supported for backward compatibility):
# DEEPSEEK_API_KEY=your_api_key
# DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
# DEEPSEEK_MODEL=deepseek-chat
