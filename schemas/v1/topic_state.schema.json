{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "topic_state.v1",
  "title": "Topic State (A3)",
  "description": "H/P1-18: Conversation topic and unresolved threads. Spec Appendix A3.",
  "type": "object",
  "required": ["schemaVersion", "activeTopic", "threads"],
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0" },
    "activeTopic": { "type": "string" },
    "threads": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["threadId", "topicId", "status"],
        "properties": {
          "threadId": { "type": "string" },
          "topicId": { "type": "string" },
          "status": { "type": "string", "enum": ["open", "closed"] },
          "lastTouchedAt": { "type": "string" },
          "summary": { "type": "string" },
          "evidence": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}
