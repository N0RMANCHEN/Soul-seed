{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "engagement_plan.v1",
  "title": "Engagement Plan (A1)",
  "description": "H/P1-18: Per-turn engagement decision. Spec Appendix A1.",
  "type": "object",
  "required": ["schemaVersion", "turnId", "mode", "engagementTier"],
  "properties": {
    "schemaVersion": { "type": "string", "const": "1.0" },
    "turnId": { "type": "string" },
    "mode": { "type": "string", "enum": ["passive", "proactive", "group"] },
    "engagementTier": { "type": "string", "enum": ["IGNORE", "REACT", "LIGHT", "NORMAL", "DEEP"] },
    "replyBudget": {
      "type": "object",
      "properties": {
        "maxTokensOut": { "type": "number" },
        "maxSentences": { "type": "number" }
      }
    },
    "contextBudget": {
      "type": "object",
      "properties": {
        "relationshipCards": { "type": "number" },
        "recalledMemories": { "type": "number" },
        "summaries": { "type": "number" }
      }
    },
    "expressiveness": {
      "type": "object",
      "properties": {
        "showEmotionPrefix": { "type": "boolean" },
        "emojiRate": { "type": "string", "enum": ["rare", "low", "auto", "high"] }
      }
    },
    "reasons": { "type": "array", "items": { "type": "string" } }
  }
}
