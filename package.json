{
  "name": "soulseed",
  "version": "0.5.0",
  "license": "CC-BY-NC-ND-4.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "tsc -p packages/core/tsconfig.json --noEmit && tsc -p packages/cli/tsconfig.json --noEmit && tsc -p packages/mcp-server/tsconfig.json --noEmit",
    "typecheck": "tsc -p packages/core/tsconfig.json --noEmit && tsc -p packages/cli/tsconfig.json --noEmit && tsc -p packages/mcp-server/tsconfig.json --noEmit",
    "build": "tsc -p packages/core/tsconfig.build.json && tsc -p packages/cli/tsconfig.build.json && tsc -p packages/mcp-server/tsconfig.build.json",
    "test": "npm run test -w @soulseed/core && npm run test -w @soulseed/cli && npm run test -w @soulseed/mcp-server",
    "acceptance": "./scripts/acceptance.sh",
    "verify": "./scripts/verify.sh",
    "h0:check": "node ./scripts/check_h0_gate.mjs",
    "governance:check": "node ./scripts/arch_governance_check.mjs",
    "doc-consistency:check": "node ./scripts/check_doc_code_consistency.mjs",
    "direct-writes:test": "node --test ./scripts/test_direct_writes_gate.mjs",
    "changelog:check": "node ./scripts/check_changelog.mjs",
    "regression:governance": "node ./scripts/regression/governance.mjs",
    "regression:relationship": "node ./scripts/regression/relationship_continuity.mjs",
    "regression:emotional": "node ./scripts/regression/emotional_depth.mjs",
    "validate:appendix-a": "node ./scripts/validate_appendix_a.mjs",
    "eval:all": "./scripts/eval_all.sh",
    "migration:audit": "node ./scripts/migration_audit.mjs",
    "eval:temporal": "node ./scripts/eval_temporal.mjs",
    "quality:baseline-delta": "node ./scripts/baseline_delta.mjs",
    "quality:update-baseline": "node ./scripts/update_baseline.mjs",
    "quality:nightly-diff": "node ./scripts/nightly_diff.mjs",
    "eval:phase-j": "node ./scripts/eval_phase_j.mjs --strict",
    "ux:slo": "node ./scripts/check_chat_ux_slo.mjs"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "ajv": "^8.18.0",
    "typescript": "^5.7.3"
  }
}
